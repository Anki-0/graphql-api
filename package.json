{
  "name": "prod-server",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "blog api",
  "main": "dist/server.js",
  "keywords": [
    "server",
    "graphql-api",
    "apollo-server"
  ],
  "author": "ankit",
  "license": "ISC",
  "scripts": {
    "dev": "SET NODE_ENV=development && nodemon --exec \"npx ts-node --esm\" ./src/server.ts",
    "clean": "rm -rf dist && mkdir dist",
    "build": "SET NODE_ENV=production && npm run clean && tsc",
    "start": "SET NODE_ENV=production && node dist/src/server.js",
    "generateSchemas": "\"npx ts-node --esm\" ./src/lib/createGraphQLSchema.ts",
    "codegen": "npm run generateSchemas && graphql-codegen --config codegen.ts",
    "test:all": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watchAll"
  },
  "dependencies": {
    "@apollo/server": "^4.7.5",
    "@panva/hkdf": "^1.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "graphql-fields": "^2.0.3",
    "graphql-tag": "^2.12.6",
    "lodash.groupby": "^4.6.0",
    "mysql2": "^3.5.1",
    "nodemailer": "^6.9.3",
    "object-traversal": "^1.0.1",
    "prettier": "^3.0.0",
    "sequelize": "^6.32.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "4.0.1",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@types/cookie": "^0.5.1",
    "@types/cors": "^2.8.13",
    "@types/graphql-fields": "^1.3.5",
    "@types/jest": "^29.5.3",
    "@types/lodash.groupby": "^4.6.7",
    "@types/node": "^20.4.2",
    "@types/nodemailer": "^6.4.8",
    "cli-highlight": "^2.1.11",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
